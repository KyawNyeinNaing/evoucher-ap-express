<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="font-weight-bold">Add New</h4>
			</div>
			<div class="card-body">
				<form action="/voucher/add" method="post" enctype="multipart/form-data">
					<div class="row">
						<div class="col-6">
							<div class="mb-3">
								<div class="form-group">
									<label class="col-form-label" for="title">Title</label>
									<input type="text" class="form-control" name="title" id="title">
								</div>
							</div>
							<div class="mb-3">
								<div class="form-group">
									<label class="col-form-label" for="expire_date">Expire Date</label>
									<input type="date" class="form-control" name="expire_date" id="expire_date">
								</div>
							</div>
							<div class="mb-3">
								<div class="form-group">
									<label class="col-form-label" for="amount">Amount</label>
									<input type="text" class="form-control" name="amount" id="amount">
								</div>
							</div>
							<div class="mb-3">
								<div class="form-group">
									<label class="col-form-label" for="payment_method">Payment Method</label>
									<input type="text" class="form-control" name="payment_method" id="payment_method">
								</div>
							</div>
						</div>

						<div class="col-6">
							<div class="mb-3">
								<div class="form-group">
									<label class="col-form-label" for="quantity">Quantity</label>
									<input type="number" min="1" class="form-control" name="quantity" id="quantity">
								</div>
							</div>
							<div class="mb-3">
								<div class="form-group">
									<label class="col-form-label" for="desc">Description</label>
									<textarea class="form-control" name="desc" id="desc" cols="30" rows="5"></textarea>
								</div>
							</div>
							<div class="mb-3">
								<div class="form-group">
									<label class="col-form-label" for="file">Upload Image</label>
									<input type="file" min="1" class="form-control" name="file" id="file">
								</div>
							</div>
						</div>
						<div class="col-12">
							<button type="submit" class="btn btn-success">Save</button>
							<a href="/" class="btn btn-danger">Cancel</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>