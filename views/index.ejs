<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>

<body>
  <main>
    <article>
      <section>
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center">
                <h1>EVoucher Table</h1>
                <a href="/voucher/add" class="btn btn-primary">Add New</a>
              </div>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Expire Date</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment Method</th>
                    <th scope="col">Quantity</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% evouchers?.forEach((list, key=1)=> { %>
                    <tr>
                      <th scope="row">
                        <%= key + 1 %>
                      </th>
                      <td>
                        <%= list.title %>
                      </td>
                      <td>
                        <%= list.desc %>
                      </td>
                      <td>
                        <%= moment( ).format('l') %>
                      </td>
                      <td>
                        <%= list.amount %>
                      </td>
                      <td>
                        <%= list.payment_method %>
                      </td>
                      <td>
                        <%= list.quantity %>
                      </td>
                      <td>
                        <a href="/voucher/<%= list._id %>" class="btn btn-sm btn-primary"><i
                            class="fa fa-edit"></i></a>
                        <a href="/delete/<%= list._id %>" class="btn btn-sm btn-danger"><i
                            class="fa fa-trash"></i></a>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
    </article>
  </main>
</body>

</html>